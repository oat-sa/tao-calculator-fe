{
    "name": "@oat-sa/tao-calculator",
    "version": "0.2.0",
    "displayName": "TAO Calculator's engine",
    "description": "A calculator's engine for TAO",
    "main": "src/index.js",
    "files": [
        "dist",
        "src",
        "!**/test/"
    ],
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "scripts": {
        "build": "rollup --config ./rollup.config.js",
        "build:watch": "rollup --config ./rollup.config.js --watch",
        "test": "jest --config=./jest.config.cjs",
        "test:watch": "npm test -- --watch",
        "test:update": "npm test -- --updateSnapshot",
        "test:cov": "npm test -- --coverage",
        "coverage:html": "open-cli .coverage/lcov-report/index.html",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore --ignore-path .eslintignore .",
        "lint:report": "eslint --ignore-path .gitignore --ignore-path .eslintignore --output-file eslint_report.json --format json .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oat-sa/tao-calculator-fe.git"
    },
    "keywords": [
        "TAO",
        "calculator"
    ],
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/oat-sa/tao-calculator-fe/issues"
    },
    "homepage": "https://github.com/oat-sa/tao-calculator-fe#readme",
    "dependencies": {
        "@oat-sa/expr-eval": "^1.3.1",
        "decimal.js": "^10.4.3",
        "lodash": "^4.17.21",
        "moo": "^0.5.2"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.20.2",
        "@oat-sa/eslint-config-tao": "^1.2.0",
        "@oat-sa/prettier-config": "^0.1.1",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@testing-library/jest-dom": "^5.16.5",
        "babel-jest": "^29.3.1",
        "eslint": "^8.32.0",
        "eslint-plugin-es": "^4.1.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-jsdoc": "^39.6.4",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-transform-stub": "^2.0.0",
        "open-cli": "^7.1.0",
        "prettier": "^2.8.3",
        "rollup": "^3.11.0"
    },
    "prettier": "@oat-sa/prettier-config"
}
